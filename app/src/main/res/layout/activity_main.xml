<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/eID"
        android:layout_width="240dp"
        android:layout_height="80dp"
        android:layout_marginStart="85dp"
        android:layout_marginTop="91dp"
        android:layout_marginEnd="86dp"
        android:layout_marginBottom="64dp"
        android:ems="10"
        android:inputType="text"
        android:text="ID"
        app:layout_constraintBottom_toTopOf="@+id/eName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/eName"
        android:layout_width="240dp"
        android:layout_height="80dp"
        android:layout_marginStart="113dp"
        android:layout_marginEnd="114dp"
        android:layout_marginBottom="64dp"
        android:ems="10"
        android:inputType="text"
        android:text="Name"
        app:layout_constraintBottom_toTopOf="@+id/eEmail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/eEmail"
        android:layout_width="240dp"
        android:layout_height="80dp"
        android:layout_marginStart="113dp"
        android:layout_marginEnd="114dp"
        android:layout_marginBottom="300dp"
        android:ems="10"
        android:inputType="text"
        android:text="E-mail"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/bAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="96dp"
        android:layout_marginBottom="24dp"
        android:text="Add"
        app:layout_constraintBottom_toTopOf="@+id/bClear"
        app:layout_constraintEnd_toStartOf="@+id/bDel"
        app:layout_constraintTop_toBottomOf="@+id/eEmail"
        app:layout_constraintVertical_bias="0.947" />

    <Button
        android:id="@+id/bDel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="24dp"
        android:text="Delete"
        app:layout_constraintBottom_toTopOf="@+id/bRead"
        app:layout_constraintEnd_toEndOf="@+id/eEmail"
        app:layout_constraintTop_toBottomOf="@+id/eEmail"
        app:layout_constraintVertical_bias="0.945" />

    <Button
        android:id="@+id/bClear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="96dp"
        android:layout_marginBottom="44dp"
        android:text="Clear"
        app:layout_constraintBottom_toTopOf="@+id/bUpd"
        app:layout_constraintEnd_toStartOf="@+id/bRead" />

    <Button
        android:id="@+id/bRead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="92dp"
        android:layout_marginBottom="44dp"
        android:text="Read"
        app:layout_constraintBottom_toTopOf="@+id/bUpd"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/bUpd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="139dp"
        android:layout_marginEnd="180dp"
        android:layout_marginBottom="51dp"
        android:text="Update"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>